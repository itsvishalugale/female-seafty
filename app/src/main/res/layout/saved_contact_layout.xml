<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SavedContactlayout"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#C3D4E5E8"

            android:elevation="4dp">

            <!-- Attachment Button -->
            <ImageButton
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/round_attachment_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <ImageButton
                android:id="@+id/btn_record"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="end"
                android:background="@drawable/circular_background"
                android:src="@drawable/ic_mic"
                android:contentDescription="record button"/>

            <!-- Siren Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_siren"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:text="ðŸš¨"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D50000"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="6dp"/>
        </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Access"
            android:textSize="24sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="12dp">

            <!-- Emergency Contacts -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#FB8E8E"
                app:cardCornerRadius="12dp"
                android:elevation="4dp"
                android:onClick="openEmergencyContacts">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_phone"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contacts"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quickly access emergancy contact for immediate help"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Medical Stock -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#faecc0"
                app:cardCornerRadius="12dp"
                android:elevation="4dp"
                android:onClick="openMedicalStock">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_hospital"
                        android:scaleType="fitCenter"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nearby Hospital"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency? Help is Nearby!"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Checkup Schedule -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#BCD9C8"
                app:cardCornerRadius="12dp"
                android:elevation="4dp"
                android:onClick="openPoliceStation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_police_station"
                        android:scaleType="fitCenter"

                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nearby Police Station"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="get instace access of nearest police station for your seafty."
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Features"
            android:textSize="24sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="12dp">

            <!-- Emergency Contacts -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#FDB7EA"
                app:cardCornerRadius="12dp"
                android:elevation="4dp"
                android:onClick="openSelfDefence">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_protection"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self Defence"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn self-defense techniques to stay safe in dangerous situations."
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#faecc0"
                app:cardCornerRadius="12dp"
                android:elevation="4dp"
                android:onClick="openChatBot">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_ai_chat"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ai Chat Bot"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get instant assistance with our AI-powered chatbot."
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#d0edbe"
                app:cardCornerRadius="12dp"
                android:elevation="4dp"
                android:onClick="openWhether">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_weather"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whether Forcast"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Know before you Go!\nBe Prepared, Rain or Shine !"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </LinearLayout>
    </LinearLayout>

</ScrollView>
