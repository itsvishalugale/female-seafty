<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        android:elevation="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:id="@+id/llRow"
            android:orientation="vertical">

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- Call Button -->

                <!-- Edit Button -->
                <ImageButton
                    android:id="@+id/btnCall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:background="@drawable/bg_button_circle"
                    android:contentDescription="Call"
                    android:src="@drawable/ic_phone"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_circle_gray"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Edit"
                    android:layout_marginStart="8dp"
                    app:tint="@color/black" />

                <!-- Delete Button -->
                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_circle_red"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete"
                    android:layout_marginStart="8dp"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Contact Row (Image + Name + Number) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!-- Contact Image -->
                <ImageView
                    android:id="@+id/imgContact"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/person_logo" />

                <!-- Contact Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textStyle="bold"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/txtNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
