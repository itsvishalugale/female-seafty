<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Toolbar Section -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6200EE"
        android:elevation="4dp">

        <!-- Attachment Button -->
        <ImageButton
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/round_attachment_24"
            android:background="@android:color/transparent"/>

        <!-- Siren Button -->
        <Button
            android:id="@+id/btn_siren"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="ðŸš¨"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D50000"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="6dp"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView to handle overflow when many contacts are saved -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contact Input Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Contact Information"
                android:textSize="18sp"
                android:textColor="#6200EE"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <!-- Name and Number Input -->
            <EditText
                android:id="@+id/contactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enter Name"
                android:inputType="text"
                android:maxLength="30"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textColorHint="#757575"/>

            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textColorHint="#757575"/>

            <!-- Save and Call Buttons -->
            <Button
                android:id="@+id/savecontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Contact"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:backgroundTint="#6200EE"/>

            <Button
                android:id="@+id/call_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5722"/>

            <!-- Emergency Contact Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_emr_police"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Police"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#D32F2F"/>

                <Button
                    android:id="@+id/btn_emr_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Parent"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#D32F2F"/>
            </LinearLayout>

            <!-- Send Message and Send Location Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_send_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Message"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6200EE"/>

                <Button
                    android:id="@+id/btn_sendLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Location"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#6200EE"/>
            </LinearLayout>

            <!-- Displaying Saved Contacts Section -->
            <TextView
                android:id="@+id/tv_saved_contacts_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Contacts"
                android:textSize="18sp"
                android:textColor="#6200EE"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:id="@+id/ll_saved_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
